<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DailyTaskPlanner.Views.MenuPlannerPage"
             Title="Меню на неделю">

	<ScrollView>
		<StackLayout Padding="20">
			<Label Text="Понедельник" FontSize="18" FontAttributes="Bold"/>
			<Editor x:Name="MondayMenu" Placeholder="Завтрак, обед, ужин..." HeightRequest="100"/>

			<Label Text="Вторник" FontSize="18" FontAttributes="Bold" Margin="0,20,0,0"/>
			<Editor x:Name="TuesdayMenu" Placeholder="Завтрак, обед, ужин..." HeightRequest="100"/>

			<Label Text="Среда" FontSize="18" FontAttributes="Bold" Margin="0,20,0,0"/>
			<Editor x:Name="WednesdayMenu" Placeholder="Завтрак, обед, ужин..." HeightRequest="100"/>

			<Label Text="Четверг" FontSize="18" FontAttributes="Bold" Margin="0,20,0,0"/>
			<Editor x:Name="ThursdayMenu" Placeholder="Завтрак, обед, ужин..." HeightRequest="100"/>

			<Label Text="Пятница" FontSize="18" FontAttributes="Bold" Margin="0,20,0,0"/>
			<Editor x:Name="FridayMenu" Placeholder="Завтрак, обед, ужин..." HeightRequest="100"/>

			<Label Text="Суббота" FontSize="18" FontAttributes="Bold" Margin="0,20,0,0"/>
			<Editor x:Name="SaturdayMenu" Placeholder="Завтрак, обед, ужин..." HeightRequest="100"/>

			<Label Text="Воскресенье" FontSize="18" FontAttributes="Bold" Margin="0,20,0,0"/>
			<Editor x:Name="SundayMenu" Placeholder="Завтрак, обед, ужин..." HeightRequest="100"/>



			<Button Text="Сохранить меню"
                    Command="{Binding SaveCommand}"
                    Margin="0,30,0,0"
                    BackgroundColor="#FF9800"
                    TextColor="White"/>
		</StackLayout>
	</ScrollView>
</ContentPage>